	LoginFlipkart loginFlip;
	HomePage home;
	
	public HomePageTest() {
		super();
	}
	
	@Test(priority=0)
	public void loginTest() throws InterruptedException
	{
		initialization();
		LoginFlipkart loginFlip =new LoginFlipkart(driver);
		Thread.sleep(2000);
		homePage =loginFlip.validateLogin(prop.getProperty("loginMobileNumber"), prop.getProperty("loginPassword"));
	}
	
	@Test()
	public void homepageValidation()
	{
		driver.get(baseurl);
		home = new HomePage(driver);
		home.closeButton();
		home.searchItem("General Knowledge Capsule 2020");
	}
}
